export DEFSPLUS=
export INCLUDESPLUS=
export CFLAGSPLUS=
export LDFLAGSPLUS=
export LIBSPLUS=
export DLLFLAG=
sedfiles=Makefile libtool config.h
#BUILDDIR=$(shell pwd | sed -e "s/\(-.*\)-[^-]*$$/\1/")
BUILDDIR=$(shell pwd)
SRCDIR=../$(shell basename $(BUILDDIR)-src)

.PHONY: all
all:
	$(SRCDIR)/configure --prefix=c:/progra~1/Readline --srcdir="$(SRCDIR)" \
		--enable-multibyte  --enable-shared  --enable-static CC="gcc -mno-cygwin" \
		CFLAGS="-Wall -O3 -fms-extensions -mms-bitfields  -fno-exceptions -fomit-frame-pointer -march=i386" \
		CPPFLAGS="-D__GW32__ -D_LARGEFILE_SOURCE=1 -D_LARGEFILE64_SOURCE=1 -D_FILE_OFFSET_BITS=64"
